{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "tests/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.svelte",
    "tailwind.config.js",
    "postcss.config.cjs",
    "vite.config.ts",
    "svelte.config.js",
    "eslint.config.mts"
  ],
  "exclude": ["**/assets/**/*", "node_modules", "dist"]
}