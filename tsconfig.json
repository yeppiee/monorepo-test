{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"noImplicitAny": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": "./"
	},
	"include": [
		"packages/**/src/**/*.ts",
		"packages/**/src/**/*.js",
		"packages/**/src/**/*.svelte",
		"packages/**/tests/**/*.ts",
		"packages/**/tests/**/*.js",
		"packages/**/tests/**/*.svelte",
		"eslint.config.mts"
	],
	"exclude": ["**/assets/**/*", "node_modules", "dist"]
}
