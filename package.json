{
	"name": "seeds",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "pnpm --color run -r build",
		"lint": "pnpm --color run -r lint",
		"test": "pnpm --color run -r test",
		"test-changed": "lerna run test --since=main",
		"dev": "concurrently -n \"Server,Models,Client\" -c \"yellow,green,blue\" \"pnpm --filter=server run dev\" \"pnpm --filter=models run dev\" \"pnpm --filter=ui run dev\"",
		"format": "prettier --write packages/*/{src,tests}/**/*.ts packages/*/{tailwind.config.js,postcss.config.cjs,vite.config.ts,svelte.config.js}",
		"check": "pnpm --color run -r check"
	},
	"volta": {
		"node": "22.16.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@manypkg/cli": "^0.25.1",
		"@types/node": "^24.0.0",
		"concurrently": "^9.1.2",
		"eslint": "^9.28.0",
		"knip": "^5.64.1",
		"lerna": "^9.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"syncpack": "14.0.0-alpha.23",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.34.0"
	},
	"dependencies": {}
}
